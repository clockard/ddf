<blueprint xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

        <reference id="cstService" interface="org.codice.ddf.catalog.cst.api.CstService"/>

        <bean id="cstDdfV1" class="org.codice.ddf.catalog.cst.def.DdfCstV1"/>
        <bean id="cstDdfTransformer" class="org.codice.ddf.catalog.cst.def.DdfCstTaxonomyTransformer"/>
        <bean id="cstDdfV1QueryTransformer" class="org.codice.ddf.catalog.cst.transformer.CstQueryFilterTransformer">
            <argument ref="cstDdfV1"/>
            <argument ref="cstService"/>
        </bean>

        <service interface="org.codice.ddf.catalog.cst.api.CstDefinition" ref="cstDdfV1"/>
        <service interface="org.codice.ddf.catalog.cst.api.InternalTaxonomyTransformer" ref="cstDdfTransformer"/>
        <service interface="ddf.catalog.transform.QueryFilterTransformer" ref="cstDdfV1QueryTransformer">
            <service-properties>
                <entry key="id" value="cst:ddf:1"/>
                <entry key="typeNames">
                    <list>
                        <value>cst:ddf:1</value>
                    </list>
                </entry>
            </service-properties>
        </service>

</blueprint>